{
  "name": "guitar-tabs-app",
  "private": true,
  "version": "0.0.0",
  "description": "A modern offline-first guitar tab and chord editor",
  "author": "Bakou",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"vite\" \"npm run electron\"",
    "electron": "wait-on tcp:5173 && tsc -p electron/tsconfig.json && electron .",
    "build": "tsc && vite build && tsc -p electron/tsconfig.json && electron-builder",
    "build:win": "tsc && vite build && tsc -p electron/tsconfig.json && electron-builder --win",
    "build:linux": "tsc && vite build && tsc -p electron/tsconfig.json && electron-builder --linux",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.bakou.guitartabs",
    "productName": "GuitarTabs",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "snap"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "typescript": "^5.0.2",
    "vite": "^7.3.1",
    "wait-on": "^7.0.1"
  }
}